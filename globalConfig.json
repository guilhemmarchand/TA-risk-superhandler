{
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "name": "index_settings",
                    "entity": [
                        {
                            "type": "singleSelect",
                            "label": "Risk default index",
                            "help": "The default risk index when calling the risksupercollect command, normally defaults to risk",
                            "defaultValue": "risk",
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "maxLength": 80,
                                    "errorMsg": "Maximum length allowed for index is 80",
                                    "minLength": 1
                                }
                            ],
                            "field": "risk_index",
                            "options": {
                                "createSearchChoice": true,
                                "denyList": "^_.*$",
                                "endpointUrl": "data/indexes"
                            }
                        }
                    ],
                    "title": "Risk index default settings"
                },
                {
                    "name": "logging",
                    "entity": [
                        {
                            "type": "singleSelect",
                            "label": "Log level",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "DEBUG",
                                        "label": "DEBUG"
                                    },
                                    {
                                        "value": "INFO",
                                        "label": "INFO"
                                    },
                                    {
                                        "value": "WARNING",
                                        "label": "WARNING"
                                    },
                                    {
                                        "value": "ERROR",
                                        "label": "ERROR"
                                    },
                                    {
                                        "value": "CRITICAL",
                                        "label": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO",
                            "field": "loglevel"
                        }
                    ],
                    "title": "Logging"
                }
            ],
            "title": "Configuration",
            "description": "Configure the Add-on"
        }
    },
    "alerts": [
        {
            "name": "risk_super",
            "label": "Risk Super action",
            "description": "Generate a risk event using the Risk Super framework",
            "entity": [
                {
                    "type": "text",
                    "label": "Risk use case lookup path",
                    "help": "The relative path to the CSV Risk lookup file, ex: SplunkEnterpriseSecurity/lookups/risk_advanced.csv",
                    "field": "uc_lookup_path",
                    "required": true
                },
                {
                    "type": "text",
                    "label": "Use case ref lookup field name",
                    "help": "The name of the field in the use case lookup containing the reference for this risk rule",
                    "field": "uc_ref_field",
                    "required": true
                }
            ]
        }
    ],
    "meta": {
        "name": "TA-risk-superhandler",
        "restRoot": "ta_risk_superhandler",
        "version": "1.0.4",
        "displayName": "Risk superhandler framework for Enterprise Security",
        "schemaVersion": "0.0.3"
    }
}